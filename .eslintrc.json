{
  "parser": "babel-eslint",
  "extends": ["boldr", "boldr/react"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "plugins": ["react"],
  "ecmaFeatures": {
    "defaultParams": true
  },
  "settings": {
    "import/resolver": {
      "babel-module": {
        "root": ["./src"]
      }
    }
  },
  "rules": {
    "no-unused-vars": 0,
    "babel/new-cap": 0,
    "babel/arrow-parens": 0,
    "import/no-unresolved": 0,
    "import/namespace": 0,
    "import/no-deprecated": 0,
    "import/no-named-as-default": 0,
    "import/no-named-as-default-member": 0,
    "import/default": 0,
    "react/prefer-stateless-function": 0,
    "comma-dangle": 0,
    "no-undef": 0,
    "react/jsx-sort-props": 0,
    "prefer-rest-params": 0
  },
  "globals": {
    "__DEV__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DISABLE_SSR__": true,
    "__DEVTOOLS__": false,
    "webpackIsomorphicTools": true
  }
}
